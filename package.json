{
  "name": "whileui-native",
  "private": true,
  "description": "WhileUI Native â€” Copy-paste components for React Native",
  "packageManager": "bun",
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "turbo": "^2.4.0",
    "typescript": "^5.7.0"
  }
}
