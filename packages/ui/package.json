{
  "name": "@thewhileloop/whileui",
  "version": "1.0.0",
  "description": "WhileUI Native â€” Copy-paste components for React Native. You own the code.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/whileloop-app/whileui"
  },
  "keywords": [
    "react-native",
    "expo",
    "ui",
    "components",
    "tailwind",
    "uniwind"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*/index.d.ts",
      "import": "./dist/components/*/index.js"
    },
    "./blocks/*": {
      "types": "./dist/blocks/*/index.d.ts",
      "import": "./dist/blocks/*/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepack": "cp ../../README.md README.md",
    "postpack": "rm -f README.md",
    "prepare": "bun run build",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@rn-primitives/hooks": ">=1.0.0",
    "@rn-primitives/hover-card": ">=1.0.0",
    "@rn-primitives/popover": ">=1.0.0",
    "@rn-primitives/portal": ">=1.0.0",
    "@rn-primitives/select": ">=1.0.0",
    "@rn-primitives/slot": ">=1.0.0",
    "@rn-primitives/tooltip": ">=1.0.0",
    "expo": ">=52.0.0",
    "expo-image": ">=2.0.0",
    "react": ">=19.0.0",
    "react-native": ">=0.81.0",
    "react-native-reanimated": ">=3.0.0",
    "react-native-safe-area-context": ">=4.0.0",
    "react-native-screens": ">=4.0.0",
    "tailwindcss": ">=4.0.0",
    "uniwind": ">=1.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.0",
    "culori": "^4.0.2",
    "react-native-calendars": "^1.1314.0",
    "tailwind-merge": "^3.0.0",
    "tailwind-variants": "^0.3.0"
  },
  "devDependencies": {
    "@types/culori": "^4.0.1",
    "@types/react": "~19.1.0",
    "react-native-screens": "^4.23.0",
    "typescript": "^5.7.0"
  }
}
