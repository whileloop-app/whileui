{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bun install && cd apps/site && bun run build",
    "watchPatterns": ["apps/site/**", "packages/ui/**"]
  },
  "deploy": {
    "startCommand": "bunx serve apps/site/dist -s -l $PORT",
    "sleepApplication": true,
    "limitOverride": {
      "containers": {
        "cpu": 0.5,
        "memoryBytes": 268435456
      }
    }
  }
}
